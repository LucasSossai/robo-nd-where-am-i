<?xml version='1.0'?>
<robot name="drive_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find drive_robot)/urdf/drive_robot.gazebo"/>
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <link name="robot_footprint"/>
  <joint name="robot_footprint_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.2"/>
    <parent link="robot_footprint"/>
    <child link="chassis"/>
  </joint>
  <!-- creating main chassis -->
  <link name="chassis">
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="15.0"/>
      <origin rpy=" 0 0 0" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <collision name="collision">
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".3 .3 .25"/>
      </geometry>
    </collision>
    <visual name="chassis_visual">
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".3 .3 .25"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <!-- creating left wheel -->
  <link name="left_back_wheel">
    <visual name="left_back_wheel_visual">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision name="left_back_wheel_collision">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin rpy=" 0 1.5707 1.5707" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="left_back_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="-0.1 0.175 -0.10"/>
    <child link="left_back_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!-- creating right wheel -->
  <link name="right_back_wheel">
    <visual name="right_back_wheel_visual">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision name="right_back_wheel_collision">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin rpy=" 0 1.5707 1.5707" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="right_back_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="-0.1 -0.175 -0.10"/>
    <child link="right_back_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!-- creating left wheel -->
  <link name="left_front_wheel">
    <visual name="left_front_wheel_visual">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision name="left_front_wheel_collision">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin rpy=" 0 1.5707 1.5707" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="left_front_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="0.1 0.175 -0.10"/>
    <child link="left_front_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!-- creating right wheel -->
  <link name="right_front_wheel">
    <visual name="right_front_wheel_visual">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision name="right_front_wheel_collision">
      <origin rpy=" 0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.0999"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin rpy=" 0 1.5707 1.5707" xyz="0.0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
  <joint name="right_front_wheel_hinge" type="continuous">
    <origin rpy="0 0 0" xyz="0.1 -0.175 -0.10"/>
    <child link="right_front_wheel"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!-- creating camera -->
  <link name="camera">
    <collision name="camera_collision">
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual name="camera_visual">
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.180 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="1 0 0"/>
  </joint>
  <!-- creating hokuyo -->
  <link name="hokuyo">
    <collision name="hokuyo_collision">
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual name="hokuyo_visual">
      <origin rpy=" 0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://drive_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>
  <joint name="hokuyo_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.15"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="1 0 0"/>
  </joint>
</robot>